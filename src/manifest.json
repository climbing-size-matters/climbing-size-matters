{
  "name": "Climbing Size Matters",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "To help people display MP sizes",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": [
    "https://www.mountainproject.com/*",
    "https://www.mountainproject.com/*"
  ],
  "icons": {
    "16": "/images/cams16.png",
    "32": "/images/cams32.png",
    "48": "/images/cams48.png",
    "128": "/images/cams128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.mountainproject.com/*"],
      "js": ["highlight-gear.js"]
    }
   ]
}