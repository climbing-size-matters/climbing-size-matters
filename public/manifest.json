{
  "name": "Climbing Size Matters",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "To help people display MP sizes",
  "permissions": [],
  "host_permissions": [
    "https://www.mountainproject.com/*",
    "https://www.mountainproject.com/*"
  ],
  "icons": {
    "16": "/icon/cams16.png",
    "32": "/icon/cams32.png",
    "48": "/icon/cams48.png",
    "128": "/icon/cams128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
   {
     "matches": ["https://www.mountainproject.com/*"],
     "js": ["content-script.js"]
   }
  ]
}